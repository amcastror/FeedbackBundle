<div id="feedback">
    <div id="feedback-form" style="display:none;" class="col-xs-4 col-md-4 panel panel-default">
        <form class="form panel-body">
            <div class="form-group">
                <select class="form-control" name="category" id="category" required="required" >
                    {% for category in categories %}
                        <option value="{{ category.id }}">{{ category.name }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="form-group">
                <input class="form-control" name="email" autofocus placeholder="{{"feedback.email"|trans}}" type="email" required="required" />
            </div>
            <div class="form-group">
                <textarea class="form-control" name="body" required="required" placeholder="{{"feedback.message"|trans}}" rows="5"></textarea>
            </div>
            <button class="btn btn-primary pull-right" type="submit">{{"feedback.send"|trans}}</button>
        </form>
    </div>
    <div id="feedback-tab">{{"feedback"|trans}}</div>
</div>